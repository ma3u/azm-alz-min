# Example Terraform variables file for Azure Landing Zone
# Copy this file to terraform.tfvars and customize the values

# Environment Configuration
environment     = "dev"
workload_name  = "landingzone"
location       = "westeurope"

# Virtual Network Configuration
virtual_network_enabled        = true
virtual_network_address_prefix = "10.0.0.0/16"

# Key Vault Configuration
key_vault_enabled     = true
key_vault_name_prefix = "kv-avm-lz"
enable_diagnostics    = true
enable_private_endpoint = false  # Set to true for production with VNet

